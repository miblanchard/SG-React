{
  "name": "sg-react",
  "version": "1.0.0",
  "description": "Study guide for React.js on the recruitment assessment.",
  "main": "client/index.html",
  "scripts": {
    "prestart": "npm run build",
    "start": "node server/server.js",
    "build": "browserify -t [babelify] client/src/index.jsx -o client/build/bundle.js",
    "test": "export NODE_ENV=test && mocha --timeout 3000 test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/the-gingerbread-man/SG-React.git"
  },
  "author": "Alex Patch",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/the-gingerbread-man/SG-React/issues"
  },
  "homepage": "https://github.com/the-gingerbread-man/SG-React#readme",
  "babel": {
    "presets": [
      "es2015",
      "react"
    ]
  },
  "eslintConfig": {
    "extends": "airbnb",
    "root": true,
    "env": {
      "browser": true,
      "node": true,
      "mocha": true
    },
    "plugins": [
      "react"
    ],
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "globals": {
      "__dirname": true
    }
  },
  "dependencies": {
    "express": "^4.13.4",
    "react": "^15.0.1",
    "react-dom": "^15.0.1"
  },
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0"
  }
}
